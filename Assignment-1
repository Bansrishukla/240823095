// Pro-2
//Program to find the maximum of two numbers

// Input values
let a = 5;
let b = 9;

// Find maximum
let max = (a > b) ? a : b;

// Output the result
console.log(max);

// Program-3 
// Program to check if a year is a leap year

// Input year
let year = 2020;

// Check leap year condition
if ((year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0)) {
    console.log("Leap Year");
} else {
    console.log("Not a Leap Year");
}

//program-4
// Program to calculate factorial of a number

// Input number
let num = 4;
let factorial = 1;

// Calculate factorial using a loop
for (let i = 1; i <= num; i++) {
    factorial *= i;
}

// Output the result
console.log(factorial);

// program-5
// Program to print multiplication table of a number

// Input number
let num = 3;

// Print multiplication table
for (let i = 1; i <= 10; i++) {
    console.log(`${num} x ${i} = ${num * i}`);
}

//program-6
// Program to reverse a number

// Input number
let num = 1234;

// Convert number to string, reverse it, and convert back to number
let reversed = Number(num.toString().split('').reverse().join(''));

// Output the reversed number
console.log(reversed);

//program-7
// Program to check if a number is a palindrome

// Input number
let num = 121;

// Reverse the number (convert to string, reverse, and convert back)
let reversed = Number(num.toString().split('').reverse().join(''));

// Check if original and reversed are same
if (num === reversed) {
    console.log("Palindrome");
} else {
    console.log("Not a Palindrome");
}


//Program-8
// Program to check if a number is a Palindrome

// Input number
let num = 121;

// Reverse the number by converting to string
let reversed = Number(num.toString().split('').reverse().join(''));

// Check if the number is the same when reversed
if (num === reversed) {
    console.log("Palindrome");
} else {
    console.log("Not a Palindrome");
}


//program-9
// Program to check if a number is Prime

// Input number
let num = 11;
let isPrime = true;

// Numbers less than 2 are not prime
if (num < 2) {
    isPrime = false;
} else {
    // Check divisors from 2 to sqrt(num)
    for (let i = 2; i <= Math.sqrt(num); i++) {
        if (num % i === 0) {
            isPrime = false;
            break;
        }
    }
}

// Output result
if (isPrime) {
    console.log("Prime");
} else {
    console.log("Not Prime");
}


